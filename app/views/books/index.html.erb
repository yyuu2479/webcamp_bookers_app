<!--投稿一覧-->
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm"=>"Are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<!--新規投稿-->
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<!--エラーメッセージ-->
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%=message%></li>
        <%end%>
      </ul>
    </div>
  <%end%>
<!--Title-->
  <div class="field">
    <% if @book.errors.any? %>
      <div class="field_with_errors"><label>Title</label></div>
      <%= f.text_field :title %>
    <% else %>
      <label>Title</label>
      <%= f.text_field :title %>
    <% end %>
  </div>

<!--Body-->
  <div class="field">
    <% if @book.errors.any? %>
      <div class="field_with_errors"><label>Body</label></div>
      <%= f.text_area :body %>
    <% else %>
      <label>Body</label>
      <%= f.text_area :body %>
    <% end %>
  </div>

<!--Btn-->
  <div class="btn">
    <%= f.submit 'Create Book'%>
  </div>
<% end %>