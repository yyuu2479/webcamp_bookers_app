<!--投稿一覧-->
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="books_index">
    <%= render 'books/index', books: @books%>
  </tbody>
</table>

<!--新規投稿-->
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<!--エラーメッセージ-->
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%=message%></li>
        <%end%>
      </ul>
    </div>
  <%end%>
<!--Title-->
  <div class="field">
    <% if @book.errors.any? %>
      <div class="field_with_errors">
        <label for="book_title">Title</label>
      </div>
      <%= f.text_field :title %>
    <% else %>
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    <% end %>
  </div>
<!--Body-->
  <div class="field">
    <% if @book.errors.any? %>
      <div class="field_with_errors">
        <label for="book_body">Body</label>
      </div>
      <%= f.text_area :body %>
    <% else %>
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    <% end %>
  </div>
<!--Btn-->
  <div class="btn">
    <%= f.submit 'Create Book'%>
  </div>
<% end %>